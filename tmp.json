{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@/typechain/*": ["./typechain/*"]
    },
    "rootDir": ".",
    "rootDirs": ["./deploy", "./tasks", "./test", "./types", "./scripts"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules"],
  "extends": "@shunkakinoki/tsconfig",
  "files": ["./hardhat.config.ts"],
  "include": [
    "./deploy",
    "./scripts",
    "./tasks",
    "./test",
    "./types",
    "./typechain",
    "./hardhat.config.ts"
  ]
}
